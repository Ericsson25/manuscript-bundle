<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="create-basic-tables" author="balazskovacs">
		<createTable tableName="ROLE">
			<column name="ROLE_ID" type="TINYINT" autoIncrement="true" startWith="1" incrementBy="1">
				<constraints primaryKey="true" />
			</column>
			<column name="ROLE" type="VARCHAR(20)" />
			<column name="IS_DEFAULT" type="BOOLEAN" defaultValueBoolean="false">
				<constraints nullable="false" />
			</column>
		</createTable>

		<createTable tableName="ACADEMIC_DISCIPLINES">
			<column name="ACADEMIC_DISCIPLINES_ID" type="VARCHAR(20)">
				<constraints primaryKey="true" />
			</column>
			<column name="ACADEMIC_DISCIPLINES_NAME" type="VARCHAR(255)" />
		</createTable>
	</changeSet>

	<changeSet id="create-usr-tables" author="balazskovacs">
		<createTable tableName="USR_ALIAS">
			<column name="USER_ID" type="INT(5)" autoIncrement="true" startWith="1" incrementBy="1">
				<constraints primaryKey="true" />
			</column>
			<column name="USERNAME" type="VARCHAR(50)">
				<constraints unique="true" nullable="false" />
			</column>
		</createTable>

		<createTable tableName="USR_USER">
			<column name="USER_ID" type="INT(5)">
				<constraints primaryKey="true" foreignKeyName="fk_user_user_id" referencedTableName="USR_ALIAS" referencedColumnNames="USER_ID" />
			</column>
			<column name="TITLE" type="VARCHAR(10)" />
			<column name="FIRST_NAME" type="VARCHAR(50)" />
			<column name="LAST_NAME" type="VARCHAR(50)" />
			<column name="EMAIL" type="VARCHAR(100)" />
			<column name="JOB" type="VARCHAR(100)" />
		</createTable>

		<createTable tableName="USR_PASSWORD">
			<column name="PASSWORD_ID" type="INT(5)" autoIncrement="true" startWith="1" incrementBy="1">
				<constraints primaryKey="true" />
			</column>
			<column name="USER_ID" type="INT(5)">
				<constraints foreignKeyName="fk_password_user_id" referencedTableName="USR_ALIAS" referencedColumnNames="USER_ID" />
			</column>
			<column name="PASSWORD" type="VARCHAR(150)">
				<constraints nullable="false" />
			</column>
			<column name="CREATION_DATE" type="DATE">
				<constraints nullable="false" />
			</column>
			<column name="EXPIRY_DATE" type="DATE">
				<constraints nullable="false" />
			</column>
		</createTable>

		<createTable tableName="USR_ROLES">
			<column name="ROLE_ID" type="TINYINT">
				<constraints primaryKey="true" foreignKeyName="fk_usr_roles_role_id" referencedTableName="ROLE" referencedColumnNames="ROLE_ID" />
			</column>
			<column name="USER_ID" type="INT(5)">
				<constraints primaryKey="true" foreignKeyName="fk_usr_roles_user_id" referencedTableName="USR_ALIAS" referencedColumnNames="USER_ID" />
			</column>
		</createTable>

		<createTable tableName="USR_ACADEMIC_DISCIPLINES">
			<column name="ID" type="INT(5)" autoIncrement="true" startWith="1" incrementBy="1">
				<constraints primaryKey="true" />
			</column>
			<column name="ACADEMIC_DISCIPLINES_ID" type="VARCHAR(20)">
				<constraints foreignKeyName="fk_usr_disciplines_disciplines_id" referencedTableName="ACADEMIC_DISCIPLINES" referencedColumnNames="ACADEMIC_DISCIPLINES_ID" />
			</column>
			<column name="USER_ID" type="INT(5)">
				<constraints foreignKeyName="fk_usr_disciplines_user_id" referencedTableName="USR_ALIAS" referencedColumnNames="USER_ID" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create-login-table" author="balazskovacs">
		<createTable tableName="LOGIN">
			<column name="USERNAME" type="VARCHAR(50)">
				<constraints primaryKey="true" foreignKeyName="fk_login_username" referencedTableName="USR_ALIAS" referencedColumnNames="USERNAME" />
			</column>
			<column name="PASSWORD_ID" type="INT(5)">
				<constraints foreignKeyName="fk_login_password_id" referencedTableName="USR_PASSWORD" referencedColumnNames="PASSWORD_ID" />
			</column>
			<column name="FAILED_LOGIN_COUNTER" type="TINYINT" defaultValueNumeric="0" />
			<column name="ENABLED" type="BOOLEAN" defaultValueBoolean="true" />
		</createTable>
	</changeSet>

	<changeSet id="create-sbm-table" author="balazskovacs">
		<createTable tableName="SBM_STATUS">
			<column name="ID" type="TINYINT" autoIncrement="true" startWith="1" incrementBy="1">
				<constraints primaryKey="true" />
			</column>
			<column name="STATUS" type="VARCHAR(20)">
				<constraints nullable="false" unique="true" />
			</column>
		</createTable>

		<createTable tableName="SBM_SUBMISSION">
			<column name="SUBMISSION_ID" type="VARCHAR(60)">
				<constraints primaryKey="true" />
			</column>
			<column name="TITLE" type="VARCHAR(100)" />
			<column name="SUBMITTER" type="INT(5)">
				<constraints foreignKeyName="fk_sbm_submission_submitter" referencedTableName="USR_USER" referencedColumnNames="USER_ID" />
			</column>
			<column name="EDITOR" type="INT(5)">
				<constraints foreignKeyName="fk_sbm_submission_editor" referencedTableName="USR_USER" referencedColumnNames="USER_ID" />
			</column>
			<column name="ABSTRACT" type="TEXT" />
			<column name="KEYWORDS" type="VARCHAR(255)" />
			<column name="CREATION_DATE" type="DATETIME" defaultValueDate="CURRENT_TIMESTAMP" />
			<column name="LAST_MODIFY_DATE" type="DATETIME" defaultValueDate="CURRENT_TIMESTAMP" />
			<column name="CLOSED" type="BOOLEAN" defaultValueBoolean="false" />
			<column name="STATUS" type="TINYINT">
				<constraints foreignKeyName="fk_sbm_submission_status" referencedTableName="SBM_STATUS" referencedColumnNames="ID" />
			</column>
		</createTable>

		<createTable tableName="SBM_ACADEMIC_DISCIPLINES">
			<column name="ACADEMIC_DISCIPLINES_ID" type="VARCHAR(20)">
				<constraints primaryKey="true" foreignKeyName="fk_sbm_disciplines_acd_disc_id" referencedTableName="ACADEMIC_DISCIPLINES" referencedColumnNames="ACADEMIC_DISCIPLINES_ID" />
			</column>
			<column name="SUBMISSION_ID" type="VARCHAR(60)">
				<constraints primaryKey="true" foreignKeyName="fk_sbm_disciplines_submission_id" referencedTableName="SBM_SUBMISSION" referencedColumnNames="SUBMISSION_ID" />
			</column>
		</createTable>

		<createTable tableName="SBM_AUTHORS">
			<column name="ID" type="INT(5)" autoIncrement="true" startWith="1" incrementBy="1">
				<constraints primaryKey="true" />
			</column>
			<column name="AUTHOR_ID" type="INT(5)">
				<constraints foreignKeyName="fk_sbm_author_author_id" referencedTableName="USR_USER" referencedColumnNames="USER_ID" />
			</column>
			<column name="SUBMISSION_ID" type="VARCHAR(60)">
				<constraints foreignKeyName="fk_sbm_author_submission_id" referencedTableName="SBM_SUBMISSION" referencedColumnNames="SUBMISSION_ID" />
			</column>
			<column name="EMAIL" type="VARCHAR(100)">
				<constraints nullable="false" />
			</column>
			<column name="FIRST_NAME" type="VARCHAR(50)" />
			<column name="LAST_NAME" type="VARCHAR(50)" />
			<column name="PENDING_REQUEST" type="BOOLEAN" />
		</createTable>

		<createTable tableName="SBM_REVIEWERS">
			<column name="ID" type="INT(5)" autoIncrement="true" startWith="1" incrementBy="1">
				<constraints primaryKey="true" />
			</column>
			<column name="REVIEWER_ID" type="INT(5)">
				<constraints foreignKeyName="fk_sbm_reviewer_reviewer_id" referencedTableName="USR_USER" referencedColumnNames="USER_ID" />
			</column>
			<column name="SUBMISSION_ID" type="VARCHAR(60)">
				<constraints foreignKeyName="fk_sbm_reviewer_submission_id" referencedTableName="SBM_SUBMISSION" referencedColumnNames="SUBMISSION_ID" />
			</column>
			<column name="EMAIL" type="VARCHAR(100)">
				<constraints nullable="false" />
			</column>
			<column name="FIRST_NAME" type="VARCHAR(50)" />
			<column name="LAST_NAME" type="VARCHAR(50)" />
			<column name="PENDING_REQUEST" type="BOOLEAN" />
		</createTable>

		<createTable tableName="SBM_REVIEWER_REVIEWES">
			<column name="ID" type="INT(5)" autoIncrement="true" startWith="1" incrementBy="1">
				<constraints primaryKey="true" />
			</column>
			<column name="REVIEWER_ID" type="INT(5)">
				<constraints foreignKeyName="fk_sbm_reviewer_reviewes_reviewer_id" referencedTableName="SBM_REVIEWERS" referencedColumnNames="REVIEWER_ID" />
			</column>
		</createTable>

		<createTable tableName="SBM_SIBMISSION_DOCS">
			<column name="ID" type="INT">
				<constraints primaryKey="true" />
			</column>
			<column name="URL" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="UPLOAD_DATE" type="DATETIME" defaultValueDate="CURRENT_TIMESTAMP" />
			<column name="VERSION" type="TINYINT">
				<constraints nullable="false" />
			</column>
			<column name="SUBMISSION_ID" type="VARCHAR(60)">
				<constraints foreignKeyName="fk_sbm_submission_docs_submission_id" referencedTableName="SBM_SUBMISSION" referencedColumnNames="SUBMISSION_ID" />
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog>